---
export interface Props {
    title: string;
    header?: string;
}
const { title, header="h2" } = Astro.props;
---
<div class="title">
    {header === "h1" && <h1>{title}</h1>}
    {header === "h2" && <h2>{title}</h2>}
    <p><slot /></p>
</div>

<style>
.title {
    margin: 20px 0;
}

.title h1,
.title h2 {
    display: inline;
    border-bottom: 0.4rem solid var(--col-pink);
}

.title p {
    font-style: italic;
    margin-top: 0.5em;
    color: var(--col-gray);
}
</style>