---
// Component Imports
import HeadBase from '../components/HeadBase.astro';
import Header from '../components/Header.astro';
import HeroImage from "../components/HeroImage.astro";
import Wrapper from "../components/Wrapper.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title?: string;
  description: string;
  permalink: string;
  language?: string;
}
const { title, description, permalink, language = "nl" } = Astro.props;
---
<!DOCTYPE html>
<html lang={language}>
<head>
    <HeadBase title={title} description={description} permalink={permalink}/>
</head>
<body>
    <Header />
    <main>
        <slot />
    </main>
    <Footer />
</body>
</html>

